#!/bin/sh

copyq_clipboard() {
    for i in -1 0 1 2 3 4 5 6 7 8
    do
        index=$(( i + 1 ));
        content=`copyq tab clipboard read $index`;
        if [ "$content" != "" ]
        then
            echo "[$index] -------------------------------------------\n"
            echo $content;
            echo "\n";
        fi
    done
}

copyq_notes() {
    for i in 0 1 2 3 4 5 6 7 8
    do
        index=$(( i + 1 ));
        content=`copyq tab notes read $i`;
        if [ "$content" != "" ]
        then
            echo "[$index] -------------------------------------------\n"
            echo $content;
            echo "\n";
        fi
    done
}

lastpass_clip_password() {
    name="$1";
    # echo $name
    lpass ls --color=never | grep -F "$name" | grep -oP '\[id\:\s([0-9]+)\]' | head -n 1 | grep -oP '[0-9]+' | xargs lpass show --clip --password;
}
